<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/alertContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFBB33">

    <ListView
        android:id="@+id/listPedidos"
        android:layout_width="0dp"
        android:layout_height="135dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/item_producto_carrito" />

    <Button
        android:id="@+id/btnPedirProcCarrito"
        android:layout_width="145dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/boton_ovalo2"
        android:fontFamily="sans-serif-medium"
        android:text="@string/btn_texto_pedir"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listPedidos" />

    <Button
        android:id="@+id/btnBorrarProcCarrito"
        android:layout_width="145dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/boton_ovalo_entrar"
        android:fontFamily="sans-serif-medium"
        android:text="@string/btn_texto_borrar"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toEndOf="@+id/btnPedirProcCarrito"
        app:layout_constraintTop_toBottomOf="@+id/listPedidos" />

</androidx.constraintlayout.widget.ConstraintLayout>
